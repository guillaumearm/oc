alias la="ls -la"
alias c="clear"

alias v="$PAGER"
alias show="$PAGER"
alias see="$PAGER"

alias vi="$EDITOR"
alias vim="$EDITOR"
alias e="$EDITOR"

alias poweroff="shutdown"
alias halt="shutdown"

alias debug_network="cat /var/log/network.log"
alias debug_router="cat /var/log/router.log"
alias debug_all="cat /var/log/*.log"